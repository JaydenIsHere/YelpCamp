<% layout('layouts/boilerplate') %> 
<!-- All of this content will be passed to our boilerplate template as body and it will be inserted right there. -->

<div id="cluster-map"></div>

    <div><a href="/campground/new">Make a new Campground</a></div>
    <% for (let camp of campgrounds) {%>
      <div class="card mb-3"  >
        <div class="row">
            <div class="col-md-4">
                <!-- if there's image then just diplay first image if not show defalut image-->
                <% if(camp.images.length) {%> 
                <img class="img-fluid" alt=""src="<%=camp.images[0].url %> ">
                <%  } else {%> 
                    <img class="img-fluid" alt=""src="https://res.cloudinary.com/dg4qomfkb/image/upload/v1632626086/YelpCamp/jmeibcuak2mnxjsvw0q2.jpg">
                    <% } %> 
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=camp.title %></h5>

                    <p class="card-text"><%=camp.description %></p>
                    <p class="card-text">
                        <small class ="text-muted"><%=camp.location %></small>
                    </p>
                    <a class="btn btn-dark" href="/campground/<%=camp._id  %> ">View<%=camp.title %></a>
                </div>
            </div>
        </div>
      </div>
        <% } %>  
    
        
<script>
    const mapToken = "<%-process.env.MAPBOX_TOKEN%>";//for access mapbox token in the showMap.js 
    const campgrounds = {features:<%- JSON.stringify(campgrounds) %>} //for access the campgrounds.geometry.coordinates in the showMap.js
  </script>
<script src ="/javascripts/clusterMap.js"></script>
